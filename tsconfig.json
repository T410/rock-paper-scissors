{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "lib": [
            "ES2021",
            "dom",
        ]
    },
    "include": [
        "src/**/*.ts",
        "./custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}